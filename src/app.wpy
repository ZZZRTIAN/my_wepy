<style lang="less">
  page {
    width: 100%;
    height: 100%;
    position: relative;
    background-color: #F6F3E2;
  }
</style>

<script>
  import wepy from 'wepy'
  import 'wepy-async-function'
  export default class extends wepy.app {
    config = {
      pages: [
        'pages/store',
        'pages/ownBook',
        'pages/mine',
        'pages/bookPage'
      ],
      window: {
        backgroundTextStyle: 'light',
        navigationBarBackgroundColor: '#F6F3E2',
        backgroundColor: '#F6F3E2',
        navigationBarTitleText: '点读精灵',
        navigationBarTextStyle: 'black'
      },
      tabBar: {
        color: '#C85715',
        selectedColor: '#C85715',
        backgroundColor: '#C7D69B',
        borderStyle: 'white',
        list: [{
          pagePath: 'pages/store',
          iconPath: 'image/mall_unclick.png',
          selectedIconPath: 'image/mall_click.png',
          text: '书城'
        }, {
          pagePath: 'pages/ownBook',
          iconPath: 'image/resource_unclick.png',
          selectedIconPath: 'image/resource_click.png',
          text: '我的书架'
        }, {
          pagePath: 'pages/mine',
          iconPath: 'image/mine_unclicked.png',
          selectedIconPath: 'image/mine_clicked.png',
          text: '个人中心'
        }],
        position: 'bottom'
      }
    }
    globalData = {
      userInfo: null
    }
    constructor() {
      super()
      this.use('requestfix')
    }
    onLaunch() {}
    getUserInfo(cb) {
      const that = this
      if (this.globalData.userInfo) {
        return this.globalData.userInfo
      }
      wepy.getUserInfo({
        success(res) {
          that.globalData.userInfo = res.userInfo
          cb && cb(res.userInfo)
        }
      })
    }
  }
</script>
